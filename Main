import pygame
from gun import Gun
import controls
from pygame.sprite import Group


def run():
    pygame.init()
    screen = pygame.display.set_mode((1000, 600))
    pygame.display.set_caption("White")
    bg_color = (0, 0, 0)
    bg = pygame.image.load('image/fon.png')
    rect = bg.get_rect()
    gun = Gun(screen)
    bullets = Group()




    while True:
        screen.blit(bg, rect)
        controls.events(screen,gun,bullets)
        gun.update_gun()
        gun.update_gun2()
        controls.update(bg_color,screen,gun, bullets)
        controls.delete(bullets)
        print('Игрок X',gun.rect.centerx)
        print('Игрок Y',gun.rect.centery)
        print('Павук X', gun.rect2.centerx)
        print('Павук Y', gun.rect2.centery)

run()
